{
  "exclude": ["node_modules", "dist", "__tests__", "**/*.test*", "**/*.spec*"],
  "include": ["src/**/*"],
  "compilerOptions": {
    "lib": ["esnext"],
    "module": "commonjs",
    "target": "es2018",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "dist",
    "declaration": true,
    "resolveJsonModule": true
  }
}
