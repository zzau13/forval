{
  "compilerOptions": {
    "declaration": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "outDir": "./dist",
    "removeComments": true,
    "rootDir": "./src",
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true
  }
}
